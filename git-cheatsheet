# File location
~/.gitconfig

# Initial setup
git config --global user.name  "user"
git config --global user.email "user@email.com"
git config --global core.editor vim

# Check settings
git config --list

# If planning to use https(as opposed to ssh) to clone, make git remember your password
git config --global credential.helper cache

# Set how long the password is saved for (in seconds). 3600=1hr
git config --global credential.helper 'cache --timeout=3600'
